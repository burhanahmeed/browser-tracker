{
  "manifest_version": 2,
  "name": "Chrome Usage Tracker",
  "version": "1.0.0",
  "description": "Monitor and analyze your web browsing habits with privacy-focused tracking",
  
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "windows",
    "alarms",
    "notifications",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["src/browser-compat.js", "src/background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/browser-compat.js", "src/content.js"],
      "run_at": "document_start"
    }
  ],
  
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "Chrome Usage Tracker",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": ["src/*"],
  
  "browser_specific_settings": {
    "gecko": {
      "id": "usage-tracker@extension.local",
      "strict_min_version": "78.0"
    }
  }
}